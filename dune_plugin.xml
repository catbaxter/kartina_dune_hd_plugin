<dune_plugin>
  <name>ktv</name>
  <caption>Kartina.TV</caption>
  <entry_points>
    <entry_point>
        <parent_media_url>root://tv</parent_media_url>
        <media_url>tv_group_list</media_url>
        <caption>Kartina.TV</caption>
        <icon_url>plugin_file://icons/logo.png</icon_url>
        <actions>
          <key_enter>
            <type>plugin_handle_user_input</type>
            <params>
               <handler_id>entry</handler_id>
               <entry_id>tv</entry_id>
            </params>
          </key_enter>
          <key_play>
            <type>plugin_tv_play</type>
          </key_play>
        </actions>
        <ip_address_required>yes</ip_address_required>
        <show_cookie_name>show_tv</show_cookie_name>
        <show_by_default>lang(russian)</show_by_default>
    </entry_point>
    <entry_point>
        <parent_media_url>setup://applications</parent_media_url>
        <media_url>setup</media_url>
        <caption>Kartina.TV Setup</caption>
        <icon_url>plugin_file://icons/logo.png</icon_url>
        <actions>
          <key_enter>
            <type>plugin_handle_user_input</type>
            <params>
               <handler_id>entry</handler_id>
               <entry_id>setup</entry_id>
            </params>
          </key_enter>
        </actions>
    </entry_point>
  </entry_points>
  <auto_resume>
    <enable>auto</enable>
  </auto_resume>
  <type>php</type>
  <params>
     <program>ktv.php</program>
  </params>
  <version_index>3</version_index>
  <version>1.0.2</version>
  <check_update>
    <schema>1</schema>
    <url>http://igores.ru/dune/update/ktv/update.txt</url>
    <timeout>0</timeout>
  </check_update> 
</dune_plugin>
